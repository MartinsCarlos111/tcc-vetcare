
@model tcc_demo.Models.Product

@using (Html.BeginForm("CadProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <br />
    <div class="editor-label">
        @Html.LabelFor(m => m.nameProduct)
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.nameProduct, new { htmlAttributes = new { @type = "text", } })
        @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
    </div>
    <br />
    @Html.DropDownList("supplier", "Escolha o Fornecedor")
    <br />
    <div class="editor-label">
        @Html.LabelFor(m => m.descriptionProduct)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.descriptionProduct, new { htmlAttributes = new { @type = "text", } })
        @Html.ValidationMessageFor(model => model.descriptionProduct, "", new { @class = "text-danger" })

    </div>
    <br />
    <div class="editor-label">
        @Html.LabelFor(m => m.unitPrice)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.unitPrice, new { htmlAttributes = new { @type = "text", } })
        @Html.ValidationMessageFor(model => model.unitPrice, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group center">

        <div>

            <label class="control-label col-md-2" for="file">Foto</label>

        </div>

        <div class="col-md-10">

            <input type="file" name="file" id="file" /> <br />

        </div>

    </div>


    <input type="submit" value="Cadastrar" />
}
<br />
@ViewBag.msg