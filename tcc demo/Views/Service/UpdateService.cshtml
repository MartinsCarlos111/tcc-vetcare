
@model tcc_demo.Models.Service
<div class="center">

    @using (Html.BeginForm("UpdateService", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {

        @Html.AntiForgeryToken()



    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.nameService, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.nameService, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.nameService, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.priceService, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.priceService, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.priceService, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.descriptionService, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.descriptionService, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.descriptionService, "", new { @class = "text-danger" })

            </div>

        </div>





        <div class="form-group center">

            <div class="col-md-10">

                @ViewBag.msg <br />

            </div>

        </div>



        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Atualizar Serviços" class="btn btn-success" />

            </div>

        </div>

    </div>

    }

</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}
