@model tcc_demo.Models.Schedule
<div class="center">
    @using (Html.BeginForm("UpdateSchedule", "Schedule", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()



        <div class="form-horizontal">

            <hr />

            @Html.DropDownList("customer", "Escolha o usuario")
            <br />
            @Html.DropDownList("animal", "Escolha o animal")
            <br />
            @Html.DropDownList("service", "Escolha o serviço")
            <br />

        </div>
        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.timeSchedule, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.timeSchedule, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.timeSchedule, "", new { @class = "text-danger" })

            </div>

        </div>
        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.dateSchedule, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.dateSchedule, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.dateSchedule, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group space-around-flex">

            <div class="">

                @Html.LabelFor(model => model.observations, htmlAttributes: new { @class = "control-label col-md-2" })

            </div>

            <div class="col-md-10">

                @Html.EditorFor(model => model.observations, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.observations, "", new { @class = "text-danger" })

            </div>

        </div>




        <div class="form-group center">

            <div class="col-md-10">

                @ViewBag.msg <br />

            </div>

        </div>



        <div class="form-group">

            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Atualizar Cliente" class="btn btn-success" />

            </div>

        </div>
    }
</div>

    
@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}
